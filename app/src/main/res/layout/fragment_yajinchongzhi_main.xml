<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.71"
        android:orientation="vertical" >

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_yajinchongzhi_cash" />

            <com.myDialog.EditTextWithDel
                android:id="@+id/insecash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:maxLength="12"
        		android:singleLine="true" />

        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_yajinchongzhi_mark" />

            <com.myDialog.EditTextWithDel
                android:id="@+id/remark"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:maxLength="100"
        		android:singleLine="true" />
            
        </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              android:layout_marginLeft="10dp"
              android:gravity="center" >

              <Button
                  android:id="@+id/recharge"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:textColor="#FFFFFF"
                  android:background="?attr/button_number_background_port"
                  android:text="@string/detail_yajinchongzhi_rechar" />
          </LinearLayout>

    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|right"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp">
        
        <TextView 
            android:id="@+id/goTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:text="@string/zhuanzhang_btn_ReBT"/>
        
    </LinearLayout>

</LinearLayout>