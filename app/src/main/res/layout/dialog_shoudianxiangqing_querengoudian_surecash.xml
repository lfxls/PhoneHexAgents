<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center|center_vertical"
      android:background="?attr/main_title_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/shoufeixiangqing_tv_surecashbiaoti"
            android:textColor="#FFFFFF"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnClosesurecashDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:src="?attr/dialogclose_background" />
        </LinearLayout>
    </LinearLayout>
    
    
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center|center_vertical"
        android:background="?attr/main_frame_color"
        android:orientation="horizontal" >
    
     <TextView
            android:id="@+id/SureCashRspMsg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:enabled="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24px"
            android:text="@string/shoufeixiangqing_tv_surecashbiaoti"
            android:visibility="gone"
             />
     
     </LinearLayout>
     
       
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

       <EditText
            android:id="@+id/surecash_Pay"
            android:layout_width="460px"
            android:layout_height="80px"
            android:layout_marginLeft="0dp"
            android:numeric="integer"
            android:maxLength="12"
            android:hint="@string/shoufeixiangqing_tv_surecashzhanghu"
            android:textColor="?attr/main_welcome_title_content_color"
            android:textSize="30px" />
        
        </LinearLayout>
        
      
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

       <EditText
            android:id="@+id/surecash_tele"
            android:layout_width="460px"
            android:layout_height="80px"
            android:layout_marginLeft="0dp"
            android:hint="@string/shoufeixiangqing_tv_surecashshoujihaoma"
            android:textColor="?attr/main_welcome_title_content_color"
            android:phoneNumber="true"
            android:maxLength="11"
            android:textSize="30px" />
        
        </LinearLayout>
        
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_surecashqueding"
            style="@style/buttonFunctionStylePort"
            android:layout_width="420dp"
            android:layout_height="80dp"
            android:focusable="true"
            android:background="?attr/button_function_background_port"
            android:text="@string/shoufeixiangqing_btn_surecashqueren" />
        
    </LinearLayout>
 
</LinearLayout>
