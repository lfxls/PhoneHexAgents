<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center|center_vertical"
            android:background="?attr/main_frame_color"
            android:orientation="horizontal" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/dlg_rquerenchongzheng_btn_title"
                android:textColor="#000000"
                android:textSize="30px" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:orientation="horizontal" >

            <ImageView
                    android:id="@+id/btnCloseDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:gravity="right"
                    android:src="@drawable/dlg_tips_close" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            >
    </LinearLayout>

    <!--line1-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_jiaoyidanhao"
                    android:textColor="#000000"
                    android:textSize="18px"
                    />
            <TextView
                    android:id="@+id/tv_danhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/main_welcome_title_content_color"
                    android:textSize="15px"
                    android:text=""
                    android:layout_marginLeft="5px"
                    />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="@string/str_jiaofeijine"
                    android:textColor="#000000"
                    android:textSize="18px"/>
            <TextView
                    android:id="@+id/tv_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:textColor="?attr/main_welcome_title_content_color"
                    android:textSize="15px"
                    />
        </LinearLayout>

    </LinearLayout>

    <!--line2-->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_yewuleixing"
                    android:textColor="#000000"
                    android:textSize="18px" />
            <TextView
                    android:id="@+id/tv_leixing"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="?attr/main_welcome_title_content_color"
                    android:textSize="15px"
                    android:layout_marginLeft="5px"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="@string/str_jiaoyishijian"
                    android:textColor="#000000"
                    android:textSize="18px" />
            <TextView
                    android:id="@+id/tv_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:textColor="?attr/main_welcome_title_content_color"
                    android:textSize="15px" />
        </LinearLayout>

    </LinearLayout>

    <!--line3-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_dianligongsi"
                    android:textColor="#000000"
                    android:textSize="18px" />
            <TextView
                    android:id="@+id/tv_gongsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/main_welcome_title_content_color"
                    android:layout_marginLeft="5px"
                    android:textSize="15px" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/biaohao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="@string/str_huhao"
                    android:textColor="#000000"
                    android:textSize="18px"/>
            <TextView
                    android:id="@+id/tv_huhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:textColor="?attr/main_welcome_title_content_color"
                    android:textSize="15px" />
        </LinearLayout>

    </LinearLayout>

    <Spinner
            android:id="@+id/spinner_yuanyin"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="?attr/spinermenubackground_style"
            />

    <EditText
            android:id="@+id/tv_reason"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="256"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

        <Button
                android:id="@+id/btn_qrgd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="?attr/button_function_background_port"
                android:textSize="20dp"
                android:text="@string/dlg_rquerenchongzheng_btn_title" />
    </LinearLayout>

</LinearLayout>