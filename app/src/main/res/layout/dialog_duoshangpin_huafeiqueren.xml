<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_frame_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center|center_vertical"
        android:background="?attr/main_title_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/phoneNo_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/dianxin_querenchongzhi"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="?attr/main_title_color"
            android:gravity="right"
            android:layout_marginRight="0dp"
            android:padding="0dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnCloseDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:src="?attr/dialogclose_background" />
        </LinearLayout>
    </LinearLayout>
     
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/str_phoneno"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phoneNo_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="18271265"
            android:textColor="?attr/main_welcome_title_content_color"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_shape_yellow"
        android:gravity="center"
        android:orientation="vertical" >
     
	   <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="@string/dianxin_zhifujine"
	            android:textColor="#000000"
	            android:textSize="20sp" />
	
	        <TextView
	            android:id="@+id/zhifujine_Tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:text="90￥"
	            android:textColor="?attr/main_welcome_title_content_color"
	            android:textSize="18sp" />
	   </LinearLayout>
	 
	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/dianxin_fuwufei"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fuwufei_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="85.5￥"
            android:textColor="?attr/main_welcome_title_content_color"
            android:textSize="18sp" />
       </LinearLayout>
	   
	   
	   
	   
	   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/dianxin_chongzhijine"
            android:textColor="#000000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/chongzhijine_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="85.5￥"
            android:textColor="?attr/main_welcome_title_content_color"
            android:textSize="18sp" />
       </LinearLayout>
      
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_qrgd"
            style="@style/buttonFunctionStylePort"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="?attr/button_function_background_port"
            android:text="@string/dianxin_queren" />
    </LinearLayout>

</LinearLayout>