<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_frame_color"
    android:orientation="vertical" >


    <LinearLayout

        
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal" >

  
        <ImageView
            android:id="@+id/btnCloseActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/main_border_style"
            android:clickable="true"
            android:gravity="right"
            android:src="@drawable/imgusrnamedrop" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10dp" 
        android:layout_marginBottom="10dp"
        android:layout_weight="6"
         android:weightSum="3">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button1"
                style="@style/buttonNumberStylePort1"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="3" />

            <Button
                android:id="@+id/button4"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="4" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" 
            android:layout_weight="1">

            <Button
                android:id="@+id/button5"
                style="@style/buttonNumberStylePort1"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="6" />

            <Button
                android:id="@+id/button7"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="8" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" 
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonClear"
                style="@style/buttonNumberStylePort1"
                android:text="@string/main_button_shoufei_qingkong" 
                android:padding="0dp"/>

            <Button
                android:id="@+id/button9"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="9" />

            <Button
                android:id="@+id/button0"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="0" />

            <Button
                android:id="@+id/buttonBack"
                style="@style/buttonNumberStylePort1"
                android:layout_marginLeft="5dp"
                android:text="@string/main_button_shoufei_huitui" 
                android:padding="0dp"/>
        </TableRow>
    </TableLayout>

 
</LinearLayout>